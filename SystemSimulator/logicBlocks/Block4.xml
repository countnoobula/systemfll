<logicBlock>

    <!-- This is information about the block and what it does -->
    <information>
        <title>Else</title>
        <description>
            The else which matches with the IF else statement
        </description>
        <type>block</type>
    </information>

    <!-- Everything regarding the graphics of the logic block -->
    <graphics>
        <icon>4.png</icon>
        <width>50</width>
        <height>50</height>
    </graphics>

    <!-- This is a list of imports -->
    <imports>
    </imports>


    <!-- These are the connection points with their code blocks -->
    <connectionPoints>
        <connection>

            <flowRule>0</flowRule>
            <linkRule>1</linkRule>

            <description>This ends the IF ELSE statements.</description>

            <rectangle>
                <x>40</x>
                <y>5</y>
                <width>10</width>
                <height>10</height>
            </rectangle>

            <color>
                <r>0</r>
                <g>192</g>
                <b>255</b>
            </color>
        </connection>
        <connection>

            <flowRule>break</flowRule>
            <linkRule>2</linkRule>

            <description>Connects to "0" on the corrosponding IF Else statement.</description>

            <rectangle>
                <x>0</x>
                <y>5</y>
                <width>10</width>
                <height>10</height>
            </rectangle>

            <color>
                <r>0</r>
                <g>192</g>
                <b>255</b>
            </color>

        </connection>
        <connection>

            <flowRule>next</flowRule>
            <linkRule>2</linkRule>

            <code>}//end else
</code>
            <description>Connects to "1" on the corrosponding IF Else statement.</description>

            <rectangle>
                <x>0</x>
                <y>35</y>
                <width>10</width>
                <height>10</height>
            </rectangle>

            <color>
                <r>0</r>
                <g>192</g>
                <b>255</b>
            </color>
        </connection>
        
    </connectionPoints>


</logicBlock>
