<logicBlock>

    <!-- This is information about the block and what it does -->
    <information>
        <title>FOR</title>
        <description>
            A general For loop
        </description>
        <type>block</type>
    </information>

    <!-- Everything regarding the graphics of the logic block -->
    <graphics>
        <icon>5.png</icon>
        <width>50</width>
        <height>50</height>
    </graphics>

    <data>
        <dataObject id="0">
            <value>0</value>
            <type>textfield</type>
        </dataObject>
        <dataObject id="1">
            <value>1</value>
            <type>textfield</type>
        </dataObject>
        <dataObject id="2">
            <value>1</value>
            <type>textfield</type>
        </dataObject>
    </data>

    <!-- These are data variables used in the code -->


    <!-- This is a list of imports -->
    <imports>
    </imports>


    <!-- These are the connection points with their code blocks -->
    <connectionPoints>
        <connection>

            <flowRule>0</flowRule>
            <linkRule>1</linkRule>

            <description>begins the for loop</description>

            <code>for(int i = #1#;i &lt; #2#;i+=#3#){</code>

            <rectangle>
                <x>40</x>
                <y>5</y>
                <width>10</width>
                <height>10</height>
            </rectangle>

            <color>
                <r>0</r>
                <g>192</g>
                <b>255</b>
            </color>
        </connection>
        <connection>

            <flowRule>next</flowRule>
            <linkRule>2</linkRule>

            <description>begins the next block</description>

            <rectangle>
                <x>0</x>
                <y>5</y>
                <width>10</width>
                <height>10</height>
            </rectangle>

            <color>
                <r>0</r>
                <g>192</g>
                <b>255</b>
            </color>
        </connection>
        
    </connectionPoints>

    <!-- Variable IO -->
    <variablePoints>
        <connection>
            <dataID>0</dataID>
            <title>Counter start</title>
            <color>
                <r>0</r>
                <g>192</g>
                <b>255</b>
            </color>
            <input>true</input>
        </connection>
        <connection>
            <dataID>1</dataID>
            <title>Amount of loops</title>
            <color>
                <r>0</r>
                <g>192</g>
                <b>255</b>
            </color>
            <input>true</input>
        </connection>
        <connection>
            <dataID>2</dataID>
            <title>Increment by</title>
            <color>
                <r>0</r>
                <g>192</g>
                <b>255</b>
            </color>
            <input>true</input>
        </connection>

    </variablePoints>


</logicBlock>
