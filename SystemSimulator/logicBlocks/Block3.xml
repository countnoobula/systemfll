<logicBlock>

    <!-- This is information about the block and what it does -->
    <information>
        <title>IF</title>
        <description>
            A general RCX IF
        </description>
        <type>block</type>
    </information>

    <!-- Everything regarding the graphics of the logic block -->
    <graphics>
        <icon>3.png</icon>
        <width>50</width>
        <height>50</height>
    </graphics>

    <!-- These are data variables used in the code -->


    <!-- This is a list of imports -->
    <imports>
    </imports>


    <!-- These are the connection points with their code blocks -->
    <connectionPoints>
        <connection>

            <flowRule>0</flowRule>
            <linkRule>1</linkRule>

            <description>begins the constructor</description>

            <code>if(true){</code>

            <rectangle>
                <x>40</x>
                <y>5</y>
                <width>10</width>
                <height>10</height>
            </rectangle>

            <color>
                <r>0</r>
                <g>192</g>
                <b>255</b>
            </color>
        </connection>
         <connection>

            <flowRule>1</flowRule>
            <linkRule>1</linkRule>

            <description>begins the constructor</description>

            <code>}else{</code>

            <rectangle>
                <x>40</x>
                <y>35</y>
                <width>10</width>
                <height>10</height>
            </rectangle>

            <color>
                <r>0</r>
                <g>192</g>
                <b>255</b>
            </color>
        </connection>
        <connection>

            <flowRule>next</flowRule>
            <linkRule>2</linkRule>

            <description>begins the next block</description>

            <rectangle>
                <x>0</x>
                <y>5</y>
                <width>10</width>
                <height>10</height>
            </rectangle>

            <color>
                <r>0</r>
                <g>192</g>
                <b>255</b>
            </color>
        </connection>
        
    </connectionPoints>


</logicBlock>
